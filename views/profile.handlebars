<body>
  {{> header}}
  <div class="container">
    <h1>{{name}}'s Profile</h1>
    <p>Email: {{email}}</p>
    <h2>Your Pets</h2>
    {{#if pets.length}}
      {{#each pets}}
        <div class="pet-card">
          <h3>{{this.name}}</h3>
          <p>Type: {{this.type}}</p>
          <p>Breed: {{this.breed}}</p>
          <p>Age: {{this.age}}</p>
          <p>Health Status: {{this.health_status}}</p>
          <p>Description: {{this.description}}</p>
          <p>Location: {{this.location}}</p>
          <img src="{{this.image_url}}" alt="Picture of {{this.name}}">
        </div>
      {{/each}}
    {{else}}
      <p>You have not adopted any pets yet.</p>
    {{/if}}
  </div>
  <div
    class="py-8 px-8 max-w-sm mx-auto bg-white rounded-xl shadow-lg space-y-2 sm:py-4 sm:flex sm:items-center sm:space-y-0 sm:space-x-6">
    <img class="block mx-auto h-24 rounded-full sm:mx-0 sm:shrink-0" src="https://static.vecteezy.com/system/resources/previews/005/544/718/non_2x/profile-icon-design-free-vector.jpg" alt="Human">
    <div class="text-center space-y-2 sm:text-left">
        <div class="space-y-0.5">
          <div class="container">
             <div class="container">
                <h1>{{name}}'s Profile</h1>
                <p class="text-slate-500 font-medium">Email: {{email}}</p>
                <p class="text-slate-500 font-medium">
                    Animal Buddy
                </p>
        </div>
        <button class="px-4 py-1 text-sm text-purple-600 font-semibold rounded-full border border-purple-200 hover:text-white hover:bg-purple-600 hover:border-transparent focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2">PETS</button>
    </div>
</div>