{{!-- views/homepage.handlebars --}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Homepage</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  {{> header}}
  <h1>Welcome to the Pet Adoption Agency</h1>
  <div>
    {{#each pets}}
      <div class="pet-card" data-type="{{type}}">
        <h2>{{name}}</h2>
        <p>Type: {{type}}</p>
        <p>Breed: {{breed}}</p>
        <p>Age: {{age}}</p>
        <p>Health Status: {{health_status}}</p>
        <p>Description: {{description}}</p>
        <p>Location: {{location}}</p>
        <img src="{{image_url}}" alt="Picture of {{name}}">
      </div>
    {{/each}}
  </div>
  <script src="/js/filterPets.js"></script>
</body>
</html>

